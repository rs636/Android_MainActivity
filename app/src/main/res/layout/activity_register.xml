<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6EE4D9"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/regi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/regi_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="나이"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/regi_name"
        app:layout_constraintStart_toStartOf="@+id/regi_name"
        app:layout_constraintTop_toBottomOf="@+id/regi_name" />

    <EditText
        android:id="@+id/regi_pnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="휴대폰 번호"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/regi_age"
        app:layout_constraintStart_toStartOf="@+id/regi_age"
        app:layout_constraintTop_toBottomOf="@+id/regi_age" />

    <EditText
        android:id="@+id/regi_id"
        android:layout_width="142dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/regi_chkbtn"
        app:layout_constraintStart_toStartOf="@+id/regi_pnum"
        app:layout_constraintTop_toBottomOf="@+id/regi_pnum" />

    <EditText
        android:id="@+id/regi_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/regi_chkbtn"
        app:layout_constraintStart_toStartOf="@+id/regi_id"
        app:layout_constraintTop_toBottomOf="@+id/regi_id" />

    <EditText
        android:id="@+id/regi_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/regi_pass"
        app:layout_constraintStart_toStartOf="@+id/regi_pass"
        app:layout_constraintTop_toBottomOf="@+id/regi_pass" />

    <Button
        android:id="@+id/regi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00BCD4"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="@+id/regi_mail"
        app:layout_constraintStart_toStartOf="@+id/regi_mail"
        app:layout_constraintTop_toBottomOf="@+id/regi_mail" />

    <Button
        android:id="@+id/regi_chkbtn"
        android:layout_width="58dp"
        android:layout_height="64dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:background="#00BCD4"
        android:text="중복체크"
        app:layout_constraintBottom_toTopOf="@+id/regi_pass"
        app:layout_constraintEnd_toEndOf="@+id/regi_pnum"
        app:layout_constraintStart_toEndOf="@+id/regi_id"
        app:layout_constraintTop_toBottomOf="@+id/regi_pnum" />
</androidx.constraintlayout.widget.ConstraintLayout>